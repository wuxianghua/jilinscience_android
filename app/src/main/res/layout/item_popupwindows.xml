<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_uphead_image">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="50dp">

        <LinearLayout
            android:id="@+id/ll_exit_app"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_corners_white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_popupwindows_camera"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="拍照"
                android:textColor="@color/colorHeadImage"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4" />

            <TextView
                android:id="@+id/item_popupwindows_Photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="从相册中选择"
                android:textColor="@color/colorHeadImage"
                android:textSize="15sp"  />
        </LinearLayout>
        <TextView
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/bg_corners_white"
            android:text="取消"
            android:textColor="@color/colorHeadImage"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>